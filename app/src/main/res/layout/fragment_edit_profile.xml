<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- White rounded card container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp">

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/ic_arrow_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </com.google.android.material.appbar.MaterialToolbar>

            <!-- Content starts here -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Birthday -->
                <TextView
                    android:text="🎂 Birthday"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/birthdayInput"
                    android:hint="mm/dd/yyyy"
                    android:focusable="false"
                    android:inputType="date"
                    android:drawableEnd="@android:drawable/ic_menu_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Zodiac -->
                <TextView
                    android:text="♌ Zodiac Sign"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Dog or Cat -->
                <Spinner
                    android:id="@+id/zodiacSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/zodiac_signs" />

                <TextView
                    android:text="🐾 Are you a..."
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/petRadioGroup"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/dogRadio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="25dp"
                        android:text="🐕 Dog Person" />

                    <RadioButton
                        android:id="@+id/catRadio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="🐈 Cat Person" />
                </RadioGroup>

                <!-- Siblings -->
                <TextView android:text="👫 Siblings"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/siblingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/siblings_options"/>

                <!-- Area -->
                <TextView android:text="📍 Area you're from"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/areaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/area_options"/>

                <!-- Favorite Movie Genre -->
                <TextView android:text="🎬 Favorite Movie Genre"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/movieSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/movie_genres"/>

                <!-- Favorite Color -->
                <TextView android:text="🎨 Favorite Color"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <GridLayout
                    android:columnCount="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button android:backgroundTint="@android:color/holo_red_light"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/red_color"/>
                    <Button android:backgroundTint="@android:color/holo_green_light"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/green_color"/>
                    <Button android:backgroundTint="@android:color/holo_orange_light"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/yellow_colour"/>
                    <Button android:backgroundTint="@android:color/holo_blue_light"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/blue_color"/>
                    <Button android:backgroundTint="@android:color/holo_purple"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/purple_color"/>
                    <Button android:backgroundTint="@color/holo_pink"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/pink_color"/>
                    <Button android:backgroundTint="@color/brown"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/brown_color"/>
                    <Button android:backgroundTint="@color/dark_blue"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/dark_blue_color"/>
                    <Button android:backgroundTint="@color/orange"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/orange_color"/>
                    <Button android:backgroundTint="@color/dark_green"
                        android:layout_width="70dp" android:layout_height="70dp"
                        android:contentDescription="@string/dark_green_color"/>
                    <Button android:backgroundTint="@android:color/transparent"
                        android:layout_width="85dp" android:layout_height="70dp"
                        android:text="Other" android:textColor="@android:color/black"
                        android:contentDescription="@string/other_color"/>
                </GridLayout>

                <!-- Religion -->
                <TextView android:text="🙏 Religion"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/religionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/religions"/>

                <!-- Hobbies and Interests -->
                <TextView
                    android:id="@+id/hobbiesLabel"
                    android:text="🎯 Hobbies and Interests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/religionSpinner"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- The actual Flow -->
                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/hobbiesFlow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/hobbiesLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:flow_wrapMode="aligned"
                    app:flow_horizontalGap="8dp"
                    app:flow_verticalGap="8dp"
                    app:flow_maxElementsWrap="3"
                    app:constraint_referenced_ids="fitnessCheck,musicCheck,artCheck,cookingCheck,travelCheck,gamingCheck,readingCheck,sportsCheck,dancingCheck,photographyCheck,otherCheck" />

                <!-- The CheckBoxes (note they are NOT wrapped in a layout, just placed in ConstraintLayout) -->
                <CheckBox
                    android:id="@+id/fitnessCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness" />

                <CheckBox
                    android:id="@+id/musicCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music" />

                <CheckBox
                    android:id="@+id/artCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art" />

                <CheckBox
                    android:id="@+id/cookingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking" />

                <CheckBox
                    android:id="@+id/travelCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel" />

                <CheckBox
                    android:id="@+id/gamingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaming" />

                <CheckBox
                    android:id="@+id/readingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📚 Reading" />

                <CheckBox
                    android:id="@+id/sportsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚽ Sports" />

                <CheckBox
                    android:id="@+id/dancingCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💃 Dancing" />

                <CheckBox
                    android:id="@+id/photographyCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📸 Photography" />

                <!-- Other option -->
                <CheckBox
                    android:id="@+id/otherCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ Other" />

                <!-- Favorite Food -->
                <TextView android:text="🍕 Favorite Food"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/foodSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:entries="@array/foods"/>

                <!-- Outgoing Slider -->
                <TextView android:text="🗣️ How outgoing are you?"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/outgoingSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"/>

                <!-- Save -->
                <Button
                    android:id="@+id/saveButton"
                    android:text="SAVE"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    app:cornerRadius="25dp" />

                <!-- Cancel -->
                <Button
                    android:id="@+id/cancelButton"
                    android:text="CANCEL"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    app:cornerRadius="25dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>