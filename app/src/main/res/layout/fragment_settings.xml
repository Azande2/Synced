<!--        app:itemTextColor="@color/selector_nav_item"-->
<!--        app:labelVisibilityMode="labeled"-->
<!--        app:menu="@menu/bottom_nav_menu"/>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>