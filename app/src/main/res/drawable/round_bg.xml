<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="@color/lt_purple" />

    <!-- Optional border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/white" />

    <!-- padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>